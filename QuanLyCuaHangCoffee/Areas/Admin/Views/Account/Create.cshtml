@using Microsoft.AspNet.Identity.EntityFramework
@model QuanLyCuaHangCoffee.Models.RegisterViewModel

@{
    ViewBag.Title = "Tạo tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"> Tạo tài khoản</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group d-flex">
                            <div class="col-6">
                                <label>Tên tài khoản</label>
                                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
                            </div>
                            <div class="col-6">
                                <label>Email</label>
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                            </div>
                        </div>                      
                        <div class="form-group d-flex">
                            <div class="col-12">
                                <label>Số điện thoại</label>
                                @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group d-flex">
                            <div class="col-12">
                                <label>Quyền</label>
                                @Html.DropDownListFor(model => model.Role, ViewBag.Role as SelectList, "- Chọn quyền -", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group d-flex">
                            <div class="col-12">
                                <label>Mật khẩu</label>
                                @Html.TextBoxFor(model => model.Password, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group d-flex">
                            <div class="col-12">
                                <label>Nhập mật khẩu</label>
                                @Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group d-flex mf-5">
                            <div class="col-1 d-grid">
                                <input type="submit" value="Thêm mới" class="btn btn-success" />
                            </div>
                            <div class="col-1 d-grid">
                                @Html.ActionLink("Trở lại", "Index", null, new { @class = "btn btn-danger" })
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
