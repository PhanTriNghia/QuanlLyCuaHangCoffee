@using QuanLyCuaHangCoffee.Models
@model LoginViewModel
@{
    ViewBag.Titile = "Login";
}
<style>
    .mgt-20{
        margin-top: 20px;
    }
</style>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/css/stylemodal.css" rel="stylesheet" />
</head>

<body>
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="modal js-modal">
            <div class="modal-container js-modal-container">
                <div class="modal-close js-modal-cloase">
                    <i class="fa-solid fa-xmark"></i>
                </div>

                <header class="modal-heading">
                    <i class="modal-heading-icon fa-solid fa-user"></i>
                    Đăng nhập
                </header>

                <div class="modal-body">
                    <div class="form-group mgt-20">
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "modal-input", @placeholder="Tên đăng nhập", @required = "required" })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">                  
                        <div class="col-md-12">
                            @Html.PasswordFor(m => m.Password, new { @class = "modal-input", @placeholder = "Mật khẩu", @required = "required" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="submit" value="Đăng nhập" class="btn_login" />
                       </div>                        
                    </div>

                    @*<button id="buy-ticket">
                        PAY
                        <i class="fa-solid fa-check"></i>
                    </button>*@
                </div>

                <div class="modal-footer">
                    @Html.ActionLink("Đăng ký","Register", new { @class = "modal-help js-register"})
                </div>
            </div>
        </div>
    }
    </body>
    
</html>

